<h3>Products</h3>
<div class="row">
  <div class="section">
  <% @products.each do |product| %>
    <div class="col s4">
      <h4><%= link_to product.name, product_path(product), id: "product_details_link", remote: true %></h4>
      <p><%= product.description %></p>
      <p><%= number_to_currency product.price %></p>
      <%= link_to 'Details', product_path(product), remote: true %>
        <div id="product<%=product.id%>_details" style='display:none;'>
          <p><%= product.description %></p>
        </div>

      <%= form_for @order_item, remote: true do |f| %>
        <%= f.hidden_field :product_id, value: product.id %>
        <%= f.number_field :quantity, min: 1, placeholder: "Oops, breaks if you don't add input!" %>
        <span class="waves-effect waves-light btn"><%= f.submit "Add to cart" %></span>
      <% end %>
    </div>
  <% end %>
</div>
</div>
